<% if user_signed_in? %>
  <div class="d-flex flex-column align-items-center">
    <h1 class="text-center">See what's happening!</h1>
    <div class="mt-3">
      <% @tweets.each do |tweet| %>
        <p class="fw-bold text-capitalize pt-3" id="ownerTweet"><%=tweet.user.email.sub(/@.*/, '')%></p>
        <div class="border rounded text-break p-1 mb-1" id="singularTweet">
          <%= tweet.body%>
        </div>
        <%= link_to 'Show', tweet, class:"btn btn-sm btn-dark mb-1"%>
        <% if tweet.user == current_user %>
          <%= link_to 'Edit', edit_tweet_path(tweet), class:"btn btn-sm btn-warning mb-1" %>
          <%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn mb-1 btn-sm btn-danger" %>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <h1>Hey!, sign in to see all tweets!</h1>
  </div>
<% end %>
