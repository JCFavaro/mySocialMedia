<div class="h-100 text-center text-white d-flex flex-column align-items-center">
  <h1 class="text-center mt-5">My Social Media</h1>
  <h1>Your tweets!</h1>
  <div class="mx-5">
    <% @tweets.each do |tweet| %>
      <div class="card border border-dark">
      <div class="card-body">
        <% if tweet.user == current_user %>
          <div class="card-text text-break p-2 mb-2 singularTweet">
            <%= tweet.body%>
          </div>
          <%= link_to 'Show', tweet, class:"btn btn-sm btn-primary mb-2"%>
          <%= link_to 'Edit', edit_tweet_path(tweet), class:"btn btn-sm btn-warning mb-2" %>
          <%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn mb-2 btn-sm btn-danger" %>
        <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to 'New Tweet', new_tweet_path, class:"btn btn-success btn-lg my-2" %>
</div>
