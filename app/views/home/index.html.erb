<div class="h-100 text-center text-white d-flex flex-column align-items-center">
  <h1 class="text-center mt-5">My Social Media</h1>
  <h1>Your tweets!</h1>
  <div class="mx-5">
    <% @tweets.each do |tweet| %>
      <% if tweet.user == current_user %>
        <div class="border border-dark rounded text-break p-1 mt-4 mb-2" id="singularTweet">
          <%= tweet.body%>
        </div>
        <%= link_to 'Show', tweet, class:"btn btn-sm btn-dark mb-2"%>
        <%= link_to 'Edit', edit_tweet_path(tweet), class:"btn btn-sm btn-warning mb-2" %>
        <%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn mb-2 btn-sm btn-danger" %>
      <% end %>
    <% end %>
  </div>
  <%= link_to 'New Tweet', new_tweet_path, class:"btn btn-dark btn-lg my-2" %>
</div>
